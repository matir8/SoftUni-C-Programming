#include <stdio.h>

/*06.Write an expression that calculates rectangleâ€™s 
 * perimeter and area by given width and height. */

int main() 
{
    double a, b, c = 0;
    printf("a: ");
    scanf("%lf", &a);
    
    printf("b: ");
    scanf("%lf", &b);
    
    printf("c: ");
    scanf("%lf", &c);
    
    double average = (a + b + c) / 3.0;
    printf("Average: %.5lf\n", average);
    
    return 0;
}
